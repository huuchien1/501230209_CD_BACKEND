<div class="content">
  <div class="content-fluid">
    <h4 class="page-title">
      <% if ( mode === "Create") { %>
  Tạo sản phẩm mới
<% } %>
      <% if ( mode === "Update") { %>
  Cập nhật sản phẩm 
<% } %>
      <% if ( mode === "Delete") { %>
  Bạn có muốn xóa <%=category?.name%> này không? 
<% } %>
      
    </h4>
    <div class="card">
      <div class="card-body">
        <% if (mode === "Create") { %> <form action="/categories/create" method="post"> <% } %> 
        <% if (mode === "Update") { %> <form action="/categories/update" method="post">
         <div class="form-group hide">
            <input
              name="id"
              type="text"
              value="<%=category?._id%>"
              id="id"
            />
          </div> 
          <% } %>
        <% if (mode === "Delete") { %> <form action="/categories/delete" method="post">
         <div class="form-group hide">
            <input
              name="id"
              type="text"
              value="<%=category?._id%>"
              id="id"
            />
          </div> 
          <% } %>
          <div class="form-group">
            <label for="code">Mã sản phẩm</label>
            <input
              name="code"
              type="text"
              value="<%=category?.code%>"
              class="form-control"
              id="code"
              placeholder="Nhập mã sản phẩm"
              disable="<%=mode==='Delete' ? true :false%>"
            />
          </div>
          <div class="form-group">
            <label for="name">Tên sản phẩm</label>
            <input
              name="name"
              type="text"
              value="<%=category?.name%>"
              class="form-control"
              id="code"
              placeholder="Nhập tên sản phẩm"
              disable="<%=mode==='Delete' ? true :false%>"
            />
          </div>
          <div class="form-group">
            <label for="image">Link hình ảnh</label>
            <input
              name="image"
              type="text"
              value="<%=category?.image%>"
              class="form-control"
              id="code"
              placeholder="Nhập link ảnh"
              disable="<%=mode==='Delete' ? true :false%>"
            />
          </div>
          <div class="card-action">
             <% if (mode==="Create") { %> <button class="btn btn-success" type="Submit">Tạo</button>         
             <% } %>
             <% if (mode==="Update") { %> <button class="btn btn-success" type="Submit">Cập nhật</button> 
             <% } %>
             <% if (mode==="Delete") { %> <button class="btn btn-danger" type="Submit">Xóa</button> 
             <% } %>
            
            <a class="btn btn-primary" href="/categories"
              >Trở về trang sản phẩm</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
