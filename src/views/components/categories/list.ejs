<div class="content">
  <div class="content-fluid">
    <div class="flex justify-content-between">
      <h4 class="page-title">Danh mục sản phẩm</h4>
      <a class="btn btn-default" href="/categories/create">Thêm sản phẩm</a>
    </div>
    <div class="card">
      <div class="card-body">
        <table class="table table-head-bg-success mb-5">
          <thead>
            <tr>
              <th scope="col">STT</th>
              <th scope="col">Image</th>
              <th scope="col">Code</th>
              <th scope="col">Name</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach(function(category, index){ %>
            <tr>
              <td><%=index+1%></td>
              <td>
                <img
                  src="<%=category.image%>"
                  alt="image"
                  class="category-label"
                />
              </td>
              <td><%=category.code%></td>
              <td><%=category.name%></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
